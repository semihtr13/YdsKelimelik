<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomsheetContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_botton_sheet_dialog"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText

            android:id="@+id/etEnglish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_et_english"
            android:hint="English"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />


        <EditText
            android:id="@+id/etTurkish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_et_turkish"
            android:hint="Turkish"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgFlagEnglish"
                android:layout_margin="3dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_flag_checked"
                android:src="@drawable/flag_united_kingdom" />
            <ImageView
                android:id="@+id/imgFlagGerman"
                android:layout_margin="3dp"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_flag"
                android:src="@drawable/flag_germany"
            />



        </LinearLayout>


        <Button
            android:id="@+id/btnClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btn_clear"
            android:fontFamily="@font/opensans_regular"
            android:text="Clean"
            android:textColor="#fafafa" />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bg_btn_add"
            android:fontFamily="@font/opensans_regular"
            android:text="Add"
            android:textColor="#f8f8f8" />
    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="#E5EAEA" />
</RelativeLayout>