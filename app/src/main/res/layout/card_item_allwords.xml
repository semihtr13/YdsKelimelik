<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="140dp"
    android:layout_height="140dp"
    android:clickable="true"
    android:id="@+id/cardview"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#5D617A"
    android:layout_margin="5dp">
    
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="15dp"
        android:clickable="true"
        android:id="@+id/rlvWord"
        android:background="@drawable/bg_allwords_card_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnVoice"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="3dp"
            android:background="@drawable/bg_allwords_btn_volume"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"/>

        <TextView

            android:fontFamily="@font/opensans_bold"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_light"
            android:id="@+id/tvWord"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Read"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/btnAddtoLearn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/add_learn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="5dp"/>




    </RelativeLayout>



</androidx.cardview.widget.CardView>